#import "CMBody.h"

// --- Static inline methods -----------------------------------------------------------------------

// --- private interface ---------------------------------------------------------------------------

@interface CMBody ()

@end

// --- Class implementation ------------------------------------------------------------------------

@implementation CMBody

- (id) initWithMass:(float)mass moment:(float)moment {
		if (self = [super init]) {
			mBody = cpBodyNew(mass, moment);
	}
	return self;
}

- (void) setVelocity:(cpVect)velocity {
	cpBodySetVel(mBody, velocity);
}

- (void) setForce:(cpVect)force {
	mBody->f = force;
}

- (void) setPosition:(cpVect)coordinate {
	mBody->p = coordinate;
}

- (void) setAngle:(float)angle {
	cpBodySetAngle(mBody, angle);
}

- (void) setAngularVelocity:(float)velocity {
}

- (void) setTorque:(float)torque {
}

- (CMShape*) createCircleWithRadius:(float)radius {
	return [[CMShape alloc] initWithBody:self radius:radius];
}

- (void) addToSpace {
	cpSpaceAddBody([[CMManager inst] space], mBody);
}

- (cpBody*) construct {
	return mBody;
}

- (void) dealloc {
	[super dealloc];
}


@end
